        <%= image_tag 'statistics/guests.png' %>
        <div class="card-statistics-body">
          <span class="d-block card-statistics-title mb-2">+2.4 mil</span>
          <span class="d-block card-statistics-subtitle">hoteleiros felizes</span>
        </div>
      </div>
      <div class="card-statistics second text-center">
        <%= image_tag 'statistics/rooms.png' %>
        <div class="card-statistics-body">
          <span class="d-block card-statistics-title mb-2">+256 mil</span>
          <span class="d-block card-statistics-subtitle">UHs gerenciadas</span>
        </div>
      </div>
      <div class="card-statistics third text-center">
        <%= image_tag 'statistics/hearts.png' %>
        <div class="card-statistics-body">
          <span class="d-block card-statistics-title mb-2">+14 milhões</span>
          <span class="d-block card-statistics-subtitle">reservas feitas com amor</span>
        </div>
      </div>
      <div class="card-statistics fourth text-center">
        <%= image_tag 'statistics/likes.png' %>
        <div class="card-statistics-body">
          <span class="d-block card-statistics-title mb-2">+10 milhões</span>
          <span class="d-block card-statistics-subtitle">hóspedes satisfeitos</span>
        </div>
      </div>
    </div>
    <h3 class="statistics-message text-center text-lg-right dark-purple">Faça parte dessa história você também!</h3>
